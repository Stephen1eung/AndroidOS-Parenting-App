<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#081317">

    <ImageView
        android:id="@+id/ChildImageView"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintEnd_toStartOf="@+id/ChildsName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/child" />

    <TextView
        android:id="@+id/ChildsName"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="93dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ChildImageView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>