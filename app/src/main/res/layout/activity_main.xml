<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2027"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="452sp"
        android:layout_height="754sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_background"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/FlipCoinBtn"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginTop="255dp"
        android:text="@string/flip_coin"
        app:layout_constraintBottom_toTopOf="@+id/TimeoutTimerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TimeoutTimerBtn"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:text="@string/timeout_timer"
        app:layout_constraintBottom_toTopOf="@+id/ConfigChildernBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FlipCoinBtn" />

    <Button
        android:id="@+id/ConfigChildernBtn"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:layout_marginBottom="251dp"
        android:text="@string/configure_my_children"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeoutTimerBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>